@model Slider
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Create</h1>
        <form asp-action="edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input class="form-control" asp-for="Order">
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title1">Title1</label>
                <input class="form-control" asp-for="Title1">
                <span class="text-danger" asp-validation-for="Title1"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title2">Title2</label>
                <input class="form-control" asp-for="Title2">
                <span class="text-danger" asp-validation-for="Title2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc">Desc</label>
                <textarea class="form-control" asp-for="Desc" rows="2"></textarea>
                <span class="text-danger" asp-validation-for="Desc"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnText">BtnText</label>
                <input class="form-control" asp-for="BtnText">
                <span class="text-danger" asp-validation-for="BtnText"></span>
            </div>
            <div class="form-group">
                <label asp-for="BtnUrl">BtnUrl</label>
                <input class="form-control" asp-for="BtnUrl">
                <span class="text-danger" asp-validation-for="BtnUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Image</label>
                <input class="form-control" asp-for="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
                <img width="200" src="~/uploads/sliders/@Model.ImageName" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}


